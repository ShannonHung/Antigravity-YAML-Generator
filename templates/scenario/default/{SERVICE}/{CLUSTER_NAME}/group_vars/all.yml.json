                "regex_enable": false,
                "children": [
                    {
                        "key": "item",
                        "description": "search domain entry",
                        "override_hint": false,
                        "type": "string",
                        "regex": "corp.example.com|svc.cluster.local",
                        "regex_enable": true,
                        "children": []
                    }
                ]
            },
            {
                "key": "nameservers",
