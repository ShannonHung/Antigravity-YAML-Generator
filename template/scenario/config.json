{
    "override_hint_style": "# <=== [Override]",
    "senario_env_key": "source",
    "top_level_spacing": 2,
    "default_env_vars": [
        {
            "key": "SERVICE",
            "description": "This var is describe the service of the cluster."
        },
        {
            "key": "CLUSTER_NAME",
            "description": "This var is describe the name of the cluster."
        },
        {
            "key": "FAB",
            "description": "This var is describe the fab of the cluster."
        },
        {
            "key": "USERNAME",
            "description": "your nt accout"
        }
    ],
    "senarios": [
        {
            "value": "default",
            "path": "template/scenario/default",
            "required_env_vars": [],
            "trigger": {
                "source": "default"
            }
        },
        {
            "value": "fab200mm",
            "path": "template/scenario/fab200mm",
            "required_env_vars": [],
            "priority": 1,
            "trigger": {
                "source": "env",
                "logic": "and",
                "conditions": [
                    {
                        "key": "FAB",
                        "regex": "200mm"
                    }
                ]
            }
        },
        {
            "value": "tvm",
            "path": "template/scenario/tvm",
            "required_env_vars": [
                {
                    "key": "TVM_FAB",
                    "description": "This var is describe the where is tvm cluster."
                },
                {
                    "key": "TVM_CILIUM",
                    "description": "This var is describe the where is tvm's cilium."
                }
            ],
            "priority": 2,
            "trigger": {
                "source": "user"
            }
        },
        {
            "value": "multitenant",
            "path": "template/scenario/multitenant",
            "required_env_vars": [
                {
                    "key": "CILIUM_ID",
                    "description": "We have our customize cilium id for ansible generation."
                }
            ],
            "priority": 3,
            "trigger": {
                "source": "user"
            }
        }
    ]
}